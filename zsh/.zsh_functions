function matlab() {
    open -a "Matlab" "$@"
}

# pushes .zshrc to my Misc git repo
function zshrcgit() {
    cd "${HOME}/Documents/Projects/System/zsh"
    cp "${HOME}/.zshrc" .
    cp "${HOME}/.zsh_aliases" .
    cp "${HOME}/.zsh_functions" . 
    git add .zshrc
    git add .zsh_aliases
    git add .zsh_functions
    if [ -z "$1" ]; then
        git commit 
    else
        git commit -m "$1"
    fi
    git push
    cd "$OLDPWD"
}

function copy() {
	out=$($1)
	echo $out | pbcopy
}

function bttmonitor() {
	n=$(top -l 1 | grep BetterTouch | cut -d' ' -f1 | awk '{print "-pid"} $0' | xargs)
	eval "top $n"
}

function throttleinfo() {
	gtimeout .01s pmset -g thermlog
}
