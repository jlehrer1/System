# Misc
function copy() {
	out=$($1)
	echo $out | pbcopy
}

function bttmonitor() {
	n=$(top -l 1 | grep BetterTouch | cut -d' ' -f1 | awk '{print "-pid"} $0' | xargs)
	eval "top $n"
}

function throttleinfo() {
	gtimeout .01s pmset -g thermlog
}
