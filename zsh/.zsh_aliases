#aliases for zsh
alias zshaliases="vim ~/.zsh_aliases"
alias zshsource="source ~/.zshrc"
alias zshconfig="vim ~/.zshrc"
alias zshfunctions="vim ~/.zsh_functions"

# convienence aliases -- makes workflow faster
alias jn="jupyter notebook"
alias c="clear"
alias e="open -e"
alias treetxt="tree > tree.txt"
alias README="code README.md"
alias ip="ipython"
alias proj="cd ~/Documents/Projects"
alias desk="cd ~/Desktop"
alias down="cd ~/Downloads"

# aliases for conda 
alias el="conda env list"
alias ca="conda activate"
alias cc="conda create"
alias cda="conda deactivate"

# aliases for git
alias gs="git status"
alias gitignore="vim .gitignore"

# aliases for shell commands
alias restart="exec zsh"
alias vimrc="vim ~/.vimrc"
alias vimrcsource="source ~/.vimrc"
alias ls="exa"
alias sl="ls"

# aliases for system stats
alias ram="top -l 1 -s 0 | grep PhysMem"

# alias since I'm lazy
alias google="safari"
